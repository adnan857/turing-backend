create table `users` (
  `user_id` varchar(255) NOT NULL,
  `password` varchar(255) NOT NULL,
  `first_name` varchar(255) NOT NULL,
  `last_name` varchar(255) DEFAULT NULL,
  `email` varchar(255) NOT NULL,
  `created_at` datetime NOT NULL,
  `updated_at` datetime DEFAULT NULL,
  PRIMARY KEY (`user_id`)
);

create table `product_types` (
  `type_id` varchar(25) NOT NULL,
  `type_desc` varchar(255) DEFAULT NULL,
  `created_at` datetime NOT NULL,
  `updated_at` datetime DEFAULT NULL,
  PRIMARY KEY (`type_id`)
);

CREATE TABLE `products` (
  `sr_no` int(11) NOT NULL AUTO_INCREMENT,
  `product_id` varchar(25) NOT NULL,
  `type_id` varchar(25) NOT NULL,
  `product_name` varchar(255) NOT NULL,
  `product_desc` varchar(255) DEFAULT NULL,
  `product_price` DECIMAL(6,2) NOT NULL,
  `created_at` datetime NOT NULL,
  `updated_at` datetime DEFAULT NULL,
  PRIMARY KEY (`sr_no`),
  UNIQUE KEY `uk_products_product_id` (`product_id`),
  KEY `fk_products_type_id` (`type_id`),
  CONSTRAINT `fk_products_type_id` FOREIGN KEY (`type_id`) REFERENCES `product_types` (`type_id`)
);

CREATE TABLE `user_orders` (
  `sr_no` int(11) NOT NULL AUTO_INCREMENT,
  `order_id` bigint NOT NULL,
  `user_id` varchar(25) NOT NULL,
  `order_status` varchar(25) NOT NULL,
  `order_amount` DECIMAL(6,2) NOT NULL,
  `created_at` datetime NOT NULL,
  `updated_at` datetime DEFAULT NULL,
  PRIMARY KEY (`sr_no`),
  UNIQUE KEY `uk_user_orders_order_id` (`order_id`),
  KEY `fk_user_orders_user_id` (`user_id`),
  CONSTRAINT `fk_user_orders_user_id` FOREIGN KEY (`user_id`) REFERENCES `users` (`user_id`)
);

CREATE TABLE `user_order_products` (
  `order_id` bigint NOT NULL,
  `product_id` varchar(25) NOT NULL,
  `product_price` DECIMAL(6,2) NOT NULL,
  `quantity` int(11) NOT NULL,
  `created_at` datetime NOT NULL,
  `updated_at` datetime DEFAULT NULL,
  PRIMARY KEY (`order_id`, `product_id`),
  KEY `fk_user_order_products_order_id` (`order_id`),
  CONSTRAINT `fk_user_order_products_order_id` FOREIGN KEY (`order_id`) REFERENCES `user_orders` (`order_id`),
  KEY `fk_user_order_products_product_id` (`product_id`),
  CONSTRAINT `fk_user_order_products_product_id` FOREIGN KEY (`product_id`) REFERENCES `products` (`product_id`)
);

